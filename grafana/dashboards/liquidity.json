{
  "uid": "liquidity-bridge",
  "title": "Liquidity & Quant Bridge",
  "tags": ["liquidity", "quant"],
  "timezone": "",
  "version": 1,
  "refresh": "30s",
  "schemaVersion": 38,
  "time": { "from": "now-6h", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "DS_PROMETHEUS",
        "type": "datasource",
        "query": "prometheus",
        "label": "Datasource",
        "refresh": 1
      },
      {
        "name": "bank",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "label": "Bank",
        "query": "label_values(liquidity_buffer_usd, bank_id)",
        "includeAll": true,
        "allValue": ".*",
        "multi": true,
        "refresh": 2
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "Liquidity Buffer (USD)",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 7 },
      "fieldConfig": { "defaults": { "unit": "currencyUSD" }, "overrides": [] },
      "targets": [
        { "refId": "A", "expr": "liquidity_buffer_usd{bank_id=~\"$bank\"}" }
      ]
    },
    {
      "id": 2,
      "title": "Policy Violations /s",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 7 },
      "options": { "legend": { "displayMode": "table", "placement": "bottom" } },
      "targets": [
        { "refId": "A", "expr": "sum by (bank_id,reason)(rate(policy_violations_total{bank_id=~\"$bank\"}[5m]))" }
      ]
    },
    {
      "id": 3,
      "title": "Quant Publish /s",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "x": 0, "y": 7, "w": 12, "h": 7 },
      "targets": [
        { "refId": "A", "expr": "sum by (bank_id)(rate(quant_publish_total{bank_id=~\"$bank\"}[5m]))" }
      ]
    },
    {
      "id": 4,
      "title": "Quant Publish p95 Latency (s)",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "x": 12, "y": 7, "w": 12, "h": 7 },
      "fieldConfig": { "defaults": { "unit": "s" }, "overrides": [] },
      "targets": [
        { "refId": "A", "expr": "histogram_quantile(0.95, sum by (le)(rate(quant_publish_latency_seconds_bucket{bank_id=~\"$bank\"}[5m])))" }
      ]
    }
  ]
}
